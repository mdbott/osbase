<% # Classification: Unclassified (provisional) -%>
[main]
        pluginsync = true
<% if @operatingsystem == "RedHat" -%>
        rundir = /var/run/puppet
<% end -%>

[agent]
        report = true
        server = <%= @puppetmaster %>
        ca_server = <%= @puppetcaserver %>
        environment = <%= @puppetenv %>
<% if @forgeserver -%>
        module_repository = http://<%= @forgeserver %>
<% end -%>

