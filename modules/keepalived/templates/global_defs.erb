<% # Classification: Unclassified (provisional) -%>
global_defs {
  notification_email {
  <% if @email.kind_of?(Array) -%>
    <% @email.each do |e| -%>
      <%= e %>
    <% end -%>
  <% else -%>
    <%= @email %>
  <% end -%>
  }
  notification_email_from root@<%= @fqdn %>
  smtp_server <%= @smtp_server %>
  smtp_connect_timeout 30
  router_id <%= @hostname %>
}
